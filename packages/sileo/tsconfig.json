{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"sourceMap": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["src", "tsdown.config.ts"],
	"exclude": ["node_modules", "dist"]
}

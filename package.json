{
	"name": "sileo-monorepo",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun run --filter site dev",
		"dev:site": "bun run --filter site dev",
		"build": "bun run --filter solid-sileo build",
		"build:site": "bun run --filter solid-sileo build && bun run --filter site build",
		"preview:site": "bun run --filter site preview",
		"check": "bun run --filter '*' check",
		"lint": "bun run --filter '*' lint",
		"lint:fix": "bun run --filter '*' lint:fix",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "changeset publish",
		"clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8"
	}
}
